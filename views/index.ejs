<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/output.css" rel="stylesheet">

    <title>Titan Battle</title>
</head>
<body>

<!--Header -->
    <header class="py-8 bg-green-900 flex items-center justify-center">
        <h1 class="text-3xl text-stone-200 font-bold underline uppercase">Titan Battle</h1>
    </header>

<!--Function that loads cards from DB-->

    <section class="flex flex-wrap min-h-screen items-center justify-center bg-amber-950 py-10">
        <% titanChar.forEach(el => { %>
        <div class="charSelect oppSelect group h-96 w-80 [perspective:1000px] m-5" data-id="<%= el._id %>">
            <div class="relative h-full w-full rounded-xl shadow-xl transition-all duration-500 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)]">
                <div class="absolute inset-0">
                    <img class="h-full w-full rounded-xl object-cover shadow-xl shadow-black/40" src="<%= el.image%>" alt="" />
                </div>
                <div class="absolute inset-0 h-full w-full rounded-xl bg-black/80 px-12 text-center text-slate-200 [transform:rotateY(180deg)] [backface-visibility:hidden]">
                    <div class="flex min-h-full flex-col items-center justify-center" data-id="<%= el._id %>">
                        <h3 class="text-3xl font-bold"><%= el.titan %></h3>
                        <p class="text-lg"><%= el.character %></p>
                        <p class="text-lg"><%= el.height %>m</p>
                        <p class="text-lg">Special: <%= el.specialAbility %></p>
                        <button class="mt-2 rounded-md bg-neutral-800 py-1 px-2 text-sm hover:bg-neutral-900 user">Select</button>
                        <button class="mt-2 rounded-md bg-neutral-800 py-1 px-2 text-sm hover:bg-neutral-900 opp">Opponent Select</button>
                    </div>
                </div>
            </div>
        </div>
            <% }) %>
    </section>




        <section class="block bg-stone-500 max-h-full pt-20">
            <header class="py-8 bg-green-900 flex items-center justify-center">
                <h1 class="text-3xl text-stone-200 font-bold underline uppercase">Battle Arena</h1>
            </header>
        </section>

    <section class="bg-stone-500 flex max-h-full pt-20 pb-64">

        <section class="basis-1/3 flex flex-col items-center">
            <div class=" inset-0">
                <img class=" rounded-xl object-cover shadow-xl shadow-black/40" src="https:/placekitten.com/200/300" alt="" />
            </div>
            <div>
                <button id="headsButton" class="block rounded shadow-lg p-5 my-5 bg-sky-700 text-white w-full" type="button">heads</button>
                <button id="tailsButton" class="block rounded shadow-lg p-5 my-5 bg-sky-700 text-white w-full" type="button">tails</button>
            </div>
        </section>
        <section class="basis-1/3 flex flex-col items-center">
            <div class=" inset-0">
                <img id="coinImg" class="rounded-xl object-cover shadow-xl shadow-black/40" src="https://static.independent.co.uk/s3fs-public/thumbnails/image/2015/10/19/11/attack-on-titan.jpg" alt="" />
            </div>
            <div>
                <button id="playButton" class="block rounded shadow-lg p-5 my-5 bg-sky-700 text-white w-full" type="button">play</button>
            </div>
        </section>
        <section class="basis-1/3 flex flex-col items-center">
            <div class=" inset-0">
                <img class=" rounded-xl object-cover shadow-xl shadow-black/40" src="https:/placekitten.com/200/300" alt="" />
            </div>
        </section>
    </section>

    <script src="js/main.js"></script>

</body>
</html>